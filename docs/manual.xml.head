    <sect1 id="nntp">
      <title>NNTP Feature</title>
      <subtitle>Talk to a Usenet news server</subtitle>

      <sect2 id="nntp-support">
        <title>Support</title>
        <para>
          <emphasis role="bold">Since:</emphasis> NeoMutt 2016-05-30
        </para>
        <para>
          <emphasis role="bold">Dependencies:</emphasis> None
        </para>
